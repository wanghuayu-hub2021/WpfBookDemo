<UserControl x:Class="CommandDemo.Miniview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommandDemo"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="300">
    <Border BorderBrush="Orange" CornerRadius="5" BorderThickness="4">
        <StackPanel>
            <TextBox x:Name="tb1" Margin="5"></TextBox>
            <TextBox x:Name="tb2" Margin="5"></TextBox>
            <TextBox x:Name="tb3" Margin="5"></TextBox>
            <TextBox x:Name="tb4" Margin="5"></TextBox>
        </StackPanel>
    </Border>
</UserControl>
