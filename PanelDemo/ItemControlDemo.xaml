<Window x:Class="PanelDemo.ItemControlDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanelDemo"
        mc:Ignorable="d"
        Title="ItemControlDemo" Height="400" Width="300">
    <Grid>
        <ListBox Margin="5">
            <CheckBox x:Name="checkBoxTim" Content="Tim"></CheckBox>
            <CheckBox x:Name="checkBoxTom" Content="Tom"></CheckBox>
            <CheckBox x:Name="checkBoxJack" Content="Jack"></CheckBox>
            <Button x:Name="btnMess" Content="Mess" Width="120"></Button>
            <Button x:Name="btnOwen" Content="Owen" Width="120"></Button>
            <Button x:Name="btnVictor" Content="Victor" Width="120" Click="btnVictor_Click"></Button>
        </ListBox>
    </Grid>
</Window>
